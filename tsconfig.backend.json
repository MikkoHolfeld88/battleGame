{
  "extends": "./tsconfig.json", // Inherit from the base tsconfig.json
  "compilerOptions": {
    "outDir": "dist", // Backend compiled JS output
    "rootDir": "src",
    "module": "NodeNext", // Align with package.json type: "module" and moduleResolution
    "moduleResolution": "NodeNext", // Or "Node" if "NodeNext" causes issues, for modern Node.js ES module resolution
    "lib": ["ESNext"], // Libs for Node.js environment (DOM not needed here)
    "baseUrl": ".", // Ensure paths are resolved correctly
    "paths": {
      "@/*": ["src/*"]
    },
    // Specific backend settings can go here
    "sourceMap": true // Generate source maps for easier debugging
  },
  "include": [
    "src/**/*.ts", // Include all .ts files in src
    "src/**/*.json"
  ],
  "exclude": [
    "src/frontend", // Exclude frontend code from backend compilation
    "node_modules",
    "dist"
  ]
}
